<%= render 'shared/errors', obj: @product%>

<div class="row">
    <div class="col-sm-offset-2 col-xs-8">
        <%= form_for(@product, :html => { class: "form-horizontal"}) do |p| %>  
        <%# '@product' is an instanse variable passed from products controller through new action%>
        <%# form_for is an rails helper method %>
        
        <div class="form-group">
            <div class="contrl-lable col-sm-2">
                <%= p.label :Name  %>
            </div>
            <div class="col-sm-10">
                <%= p.text_field :name, class: "form-control", placeholder: "Name of product", autofocus: true %>
            </div>
        </div>
        
        <div class="form-group">
            <div class="contrl-lable col-sm-2">
                <%= p.label :Cost  %>
            </div>
            <div class="col-sm-10">
                <%= p.number_field :cost, class: "form-control", placeholder: "Cost of product",autofocus: true %>
            </div>
        </div>
        
        <div class="form-group">
            <div class="contrl-lable col-sm-2">
                <%= p.label :Description %>
            </div>
            <div class="col-sm-10">
                <%= p.text_area :description, rows: 5, class: "form-control", placeholder: "Description about product" %>
            </div>  
        </div>
        
        <div class="form-group">
            <div class="contrl-lable col-sm-2">
                <%= p.label :Age  %>
            </div>
            <div class="col-sm-10">
                <%= p.number_field :age, class: "form-control", placeholder: "Age of product" %>
            </div>
        </div>

        <div class="form-group">
            <div class="contrl-lable col-sm-2">
                <%= p.label :Address  %>
            </div>
            <div class="col-sm-10">
                <%= p.text_area :address, class: "form-control", placeholder: "Product location" %>
            </div>
        </div>
        
        <div class="form-group">
            <div class="contrl-lable col-sm-2">
                <%= p.label :Image  %>
            </div>
            <div class="col-sm-10">
                <%= p.file_field :image, class: "form-control", placeholder: "upload product's Image" %>
            </div>
        </div>

        <div class="form-group">
            <div class="contrl-lable col-sm-2">
                <%= p.label :Visibility  %>
            </div>
            <div class="col-sm-10">
                <%= p.check_box :visibility, class: "checkbox-inline input-checkbox" %>
            </div>
        </div>
        
        <div class="form-group center">
            <div cass="col-sm-10">
                <%= p.submit class: "btn btn-primary btn-md" %>
            </div>
        </div>

        <% end %>

        <div class="center" style="margin:2rem 0;">
           [ <%= link_to 'cancel and return to Product listing', products_path %> ]
        </div>
    </div>
</div>
